<Window x:Class="VisorView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:local="clr-namespace:VisorView"
        Title="VisorView"
        Icon="/VisorView.ico"
        Width="200"
        Height="200"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="True">

    <Window.Resources>
        <local:TabColorConverter x:Key="TabColorConverter"/>
        <Color x:Key="AccentColor">#FF6C5CE7</Color>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="PanelBg" Color="#D10B0F14"/>
        <SolidColorBrush x:Key="PanelStroke" Color="#33FFFFFF"/>
        <SolidColorBrush x:Key="HeaderBg" Color="#B0121720"/>
        <SolidColorBrush x:Key="FooterBg" Color="#80121720"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#EFFFFFFF"/>
        <SolidColorBrush x:Key="TextMuted" Color="#A8FFFFFF"/>

        <Style x:Key="VisorButton" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Background" Value="#1FFFFFFF"/>
            <Setter Property="BorderBrush" Value="#22FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#2BFFFFFF"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#44FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#16FFFFFF"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="VisorButtonPrimary" TargetType="Button" BasedOn="{StaticResource VisorButton}">
            <Setter Property="Background" Value="#2A6C5CE7"/>
            <Setter Property="BorderBrush" Value="#556C5CE7"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3A6C5CE7"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1F6C5CE7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="VisorTextBox" TargetType="TextBox">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Background" Value="#14FFFFFF"/>
            <Setter Property="BorderBrush" Value="#22FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="Bd" Property="Background" Value="#1EFFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#44FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="VisorComboBox" TargetType="ComboBox">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Background" Value="#14FFFFFF"/>
            <Setter Property="BorderBrush" Value="#22FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,2"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="Outer"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="10"
                                    SnapsToDevicePixels="True"/>

                            <ContentPresenter x:Name="ContentSite"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="10,0,30,0"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"
                                              IsHitTestVisible="False"/>

                            <ToggleButton x:Name="DropDownToggle"
                              Focusable="False"
                              ClickMode="Press"
                              IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                              Background="Transparent"
                              BorderThickness="0"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="Transparent"/>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>



                            <Path x:Name="Arrow"
                                  Width="10"
                                  Height="6"
                                  Stretch="Fill"
                                  Fill="{StaticResource TextMuted}"
                                  HorizontalAlignment="Right"
                                  Margin="0,0,12,0"
                                  VerticalAlignment="Center"
                                  Data="M 0 0 L 5 6 L 10 0 Z"
                                  IsHitTestVisible="False"/>

                            <Popup x:Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   Focusable="False"
                                   AllowsTransparency="True"
                                   PopupAnimation="Fade">
                                <Grid MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border Background="#E010131A"
                                            BorderBrush="#33FFFFFF"
                                            BorderThickness="1"
                                            CornerRadius="12"
                                            SnapsToDevicePixels="True">
                                        <ScrollViewer Margin="6"
                                                      CanContentScroll="True"
                                                      VerticalScrollBarVisibility="Auto"
                                                      HorizontalScrollBarVisibility="Disabled">
                                            <ItemsPresenter/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Outer" Property="BorderBrush" Value="#55FFFFFF"/>
                                <Setter TargetName="Outer" Property="Background" Value="#14121720"/>
                                <Setter TargetName="Arrow" Property="Fill" Value="{StaticResource TextPrimary}"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Outer" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="Outer" Property="Background" Value="#1C121720"/>
                                <Setter TargetName="Arrow" Property="Fill" Value="{StaticResource TextPrimary}"/>
                            </Trigger>
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter TargetName="Outer" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="Outer" Property="Background" Value="#20121720"/>
                                <Setter TargetName="Arrow" Property="Fill" Value="{StaticResource TextPrimary}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Outer" Property="Opacity" Value="0.55"/>
                            </Trigger>

                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="VisorComboBoxItem" TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Padding" Value="10,9"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Bd"
                        Background="Transparent"
                        CornerRadius="8">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Bd"
                                Property="Background"
                                Value="#2A6C5CE7"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd"
                                Property="Background"
                                Value="#446C5CE7"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd"
                                Property="Opacity"
                                Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style x:Key="TabListStyle" TargetType="ListBox">
            <Setter Property="Background" Value="#0AFFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="6,6,6,6"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Hidden"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
        </Style>

        <Style x:Key="TabListItemStyle" TargetType="ListBoxItem">
            <Setter Property="Margin" Value="0,0,0,6"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd" CornerRadius="10" Background="{TemplateBinding Background}" BorderBrush="#22FFFFFF" BorderThickness="1">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#246C5CE7"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#556C5CE7"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#1FFFFFFF"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#44FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Canvas x:Name="RootCanvas" Background="Transparent">
        <Border x:Name="Panel"
            Canvas.Left="80" Canvas.Top="80"
            Width="520" Height="320"
            Background="{StaticResource PanelBg}"
            BorderBrush="{StaticResource PanelStroke}"
            BorderThickness="1"
            CornerRadius="16"
            SnapsToDevicePixels="True"
            RenderOptions.EdgeMode="Aliased">
                <Border.RenderTransform>
                    <TranslateTransform x:Name="PanelTranslate"/>
                </Border.RenderTransform>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="42"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                    Background="{StaticResource HeaderBg}"
                    CornerRadius="16,16,0,0"
                    SnapsToDevicePixels="True">

                    <Grid x:Name="Header"
                      Background="Transparent"
                      MouseLeftButtonDown="HeaderDown">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="CloseButton"
                            Grid.Column="0"
                            Width="30"
                            Height="28"
                            Padding="0"
                            FontSize="12"
                            Margin="7,7,8,7"
                            Style="{StaticResource VisorButton}"
                            Content="✕"/>

                        <TextBlock x:Name="ModeText"
                               Grid.Column="1"
                               Margin="0,0,12,0"
                               VerticalAlignment="Center"
                               Foreground="{StaticResource TextPrimary}"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Text="EDIT MODE"/>

                        <ComboBox x:Name="ContentTypeCombo"
                              Grid.Column="2"
                              Width="120"
                              Height="28"
                              Margin="0,7,10,7"
                              Style="{StaticResource VisorComboBox}"
                              ItemContainerStyle="{StaticResource VisorComboBoxItem}">
                            <ComboBoxItem Content="Image"/>
                            <ComboBoxItem Content="Browser"/>
                        </ComboBox>

                        <Button x:Name="BackButton"
                            Grid.Column="3"
                            Width="34"
                            Height="28"
                            Margin="0,7,8,7"
                            Style="{StaticResource VisorButton}"
                            Content="←"
                            Click="BackButton_Click"/>

                        <Button x:Name="ForwardButton"
                            Grid.Column="4"
                            Width="34"
                            Height="28"
                            Margin="0,7,10,7"
                            Style="{StaticResource VisorButton}"
                            Content="→"
                            Click="ForwardButton_Click"/>

                        <Button x:Name="SearchButton"
                            Grid.Column="5"
                            Width="34"
                            Height="28"
                            Margin="0,7,8,7"
                            Padding="0"
                            FontSize="18"
                            Style="{StaticResource VisorButton}"
                            Click="SearchButton_Click"
                            Content="⌕"/>

                        <Button x:Name="UploadButton"
                            Grid.Column="6"
                            Padding="5"
                            FontSize="10"
                            Height="28"
                            Margin="0,7,10,7"
                            Style="{StaticResource VisorButtonPrimary}"
                            Content="Upload"
                            Click="UploadButton_Click"/>

                        <Popup x:Name="SearchPopup"
                           PlacementTarget="{Binding ElementName=SearchButton}"
                           Placement="Bottom"
                           AllowsTransparency="True"
                           StaysOpen="False">
                            <Border Background="#E010131A"
                                BorderBrush="#33FFFFFF"
                                BorderThickness="1"
                                CornerRadius="12"
                                Padding="10"
                                Margin="0,6,0,0">
                                <Grid Width="320">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox x:Name="SearchTextBox"
                                         Grid.Column="0"
                                         Height="30"
                                         Style="{StaticResource VisorTextBox}"
                                         KeyDown="SearchTextBox_KeyDown"
                                         Text=""/>

                                    <Button x:Name="SearchGoButton"
                                        Grid.Column="1"
                                        Height="30"
                                        Margin="10,0,0,0"
                                        Style="{StaticResource VisorButtonPrimary}"
                                        Click="SearchGoButton_Click"
                                        Content="Go"/>
                                </Grid>
                            </Border>
                        </Popup>
                    </Grid>
                </Border>

                <Grid Grid.Row="1" ClipToBounds="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition x:Name="TabBarColumn" Width="44"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Border x:Name="TabBar" Grid.Column="0" Background="#0AFFFFFF">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" MinHeight="42"/>
                                <RowDefinition/>
                                <RowDefinition Height="Auto" MinHeight="40.04"/>
                            </Grid.RowDefinitions>

                            <Button x:Name="NewTabButton"
                                    Grid.Row="0"
                                    Margin="8,10,7,6"
                                    Padding="0"
                                    FontSize="18"
                                    Style="{StaticResource VisorButton}"
                                    Content="+"/>

                            <ListBox x:Name="TabList"
                                 local:TabItemView.CloseRequested="TabCloseRequested"
                                 Grid.Row="1"
                                 Style="{StaticResource TabListStyle}"
                                 ItemContainerStyle="{StaticResource TabListItemStyle}"
                                 SelectionMode="Single"
                                 Margin="0,0,0,40"
                                 Grid.RowSpan="2">

                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <local:TabItemView/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>


                            <Button x:Name="TabBarSettingsButton"
                                    Grid.Row="2"
                                    Margin="8,10,7,6"
                                    FontSize="10"
                                    Padding="0"
                                    Style="{StaticResource VisorButton}"
                                    Content="⚙"/>
                        </Grid>
                    </Border>

                    <Border Grid.Column="1"
                            CornerRadius="14"
                            Margin="6,6,6,6"
                            Background="#08000000"
                            BorderBrush="#14FFFFFF"
                            BorderThickness="1">
                        <Grid>
                            <ContentControl x:Name="ContentHost"
                    Canvas.Left="0"
                    Canvas.Top="0"
                    Panel.ZIndex="0"/>

                            <TextBlock x:Name="HintText"
           Canvas.Left="16"
           Canvas.Top="16"
           Panel.ZIndex="10"
           Foreground="#A8FFFFFF"
           FontSize="12"
           TextWrapping="Wrap"
           Width="260"
           Text="Tip: Add a tab or switch the content type to show something here."
           Visibility="Collapsed"/>


                            
                        </Grid>
                    </Border>
                </Grid>

                <Grid Grid.Row="2" Background="{StaticResource FooterBg}">
                    <Border x:Name="ZoomDock"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Margin="10,0,0,0"
                        Panel.ZIndex="9999"
                        Background="#1A000000"
                        BorderBrush="#22FFFFFF"
                        BorderThickness="1"
                        CornerRadius="12"
                        Padding="6"
                        Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="ZoomOutButton"
                                Content="−"
                                Width="15"
                                Height="15"
                                FontSize="10"
                                Margin="0,0,6,0"
                                Style="{StaticResource VisorMiniIconButton}"/>
                            <Button x:Name="ZoomInButton"
                                Content="+"
                                Width="15"
                                Height="15"
                                FontSize="10"
                                Style="{StaticResource VisorMiniIconButton}"/>
                        </StackPanel>
                    </Border>

                    <Thumb x:Name="BR"
                           Width="28"
                           Height="28"
                           Cursor="SizeNWSE"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Bottom"
                           Margin="0,0,2,2"
                           Background="Transparent"
                           Panel.ZIndex="9999">
                        <Thumb.Template>
                            <ControlTemplate TargetType="Thumb">
                                <Border Width="28"
                                        Height="28"
                                        Background="#14000000"
                                        CornerRadius="16"
                                        BorderBrush="#22FFFFFF"
                                        BorderThickness="1">
                                    <Border Width="14"
                                            Height="14"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Bottom"
                                            Background="#66FFFFFF"
                                            CornerRadius="7"
                                            Margin="0,0,6,6"/>
                                </Border>
                            </ControlTemplate>
                        </Thumb.Template>
                    </Thumb>
                </Grid>
            </Grid>
        </Border>
    </Canvas>
</Window>
