<Window x:Class="VisorView.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Settings"
        Width="420" Height="560"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Foreground="#EFFFFFFF"
        ShowInTaskbar="False">

    <Window.Resources>
        <Color x:Key="AccentColor">#FF6C5CE7</Color>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="PanelBg" Color="#D10B0F14"/>
        <SolidColorBrush x:Key="PanelStroke" Color="#33FFFFFF"/>
        <SolidColorBrush x:Key="HeaderBg" Color="#B0121720"/>
        <SolidColorBrush x:Key="FooterBg" Color="#80121720"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#EFFFFFFF"/>
        <SolidColorBrush x:Key="TextMuted" Color="#A8FFFFFF"/>

        <!-- Small card blocks to structure Settings -->
        <Style x:Key="SectionCard" TargetType="Border">
            <Setter Property="Background" Value="#0FFFFFFF"/>
            <Setter Property="BorderBrush" Value="#22FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Padding" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- Clickable link style -->
        <Style x:Key="LinkText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="TextDecorations" Value="Underline"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="VisorButton" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Background" Value="#1FFFFFFF"/>
            <Setter Property="BorderBrush" Value="#22FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#2BFFFFFF"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#44FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#16FFFFFF"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="VisorButtonPrimary" TargetType="Button" BasedOn="{StaticResource VisorButton}">
            <Setter Property="Background" Value="#2A6C5CE7"/>
            <Setter Property="BorderBrush" Value="#556C5CE7"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3A6C5CE7"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1F6C5CE7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="VisorComboBox" TargetType="ComboBox">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Background" Value="#14FFFFFF"/>
            <Setter Property="BorderBrush" Value="#22FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,2"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="Outer"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="10"
                                    SnapsToDevicePixels="True"/>

                            <ContentPresenter x:Name="ContentSite"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="10,0,30,0"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"
                                              IsHitTestVisible="False"/>

                            <ToggleButton x:Name="DropDownToggle"
                                          Focusable="False"
                                          ClickMode="Press"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch"/>

                            <Path x:Name="Arrow"
                                  Width="10"
                                  Height="6"
                                  Stretch="Fill"
                                  Fill="{StaticResource TextMuted}"
                                  HorizontalAlignment="Right"
                                  Margin="0,0,12,0"
                                  VerticalAlignment="Center"
                                  Data="M 0 0 L 5 6 L 10 0 Z"
                                  IsHitTestVisible="False"/>

                            <Popup x:Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   Focusable="False"
                                   AllowsTransparency="True"
                                   PopupAnimation="Fade">
                                <Grid MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border Background="#E010131A"
                                            BorderBrush="#33FFFFFF"
                                            BorderThickness="1"
                                            CornerRadius="12"
                                            SnapsToDevicePixels="True">
                                        <ScrollViewer Margin="6"
                                                      CanContentScroll="True"
                                                      VerticalScrollBarVisibility="Auto"
                                                      HorizontalScrollBarVisibility="Disabled">
                                            <ItemsPresenter/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Outer" Property="BorderBrush" Value="#44FFFFFF"/>
                                <Setter TargetName="Outer" Property="Background" Value="#1EFFFFFF"/>
                                <Setter TargetName="Arrow" Property="Fill" Value="{StaticResource TextPrimary}"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Outer" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="Outer" Property="Background" Value="#1EFFFFFF"/>
                                <Setter TargetName="Arrow" Property="Fill" Value="{StaticResource TextPrimary}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Outer" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="VisorComboBoxItem" TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Padding" Value="10,9"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Bd"
                                Background="Transparent"
                                CornerRadius="10">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#22FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#2A6C5CE7"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="VisorCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="22"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border x:Name="Box"
                                    Width="16" Height="16"
                                    CornerRadius="4"
                                    BorderBrush="#33FFFFFF"
                                    BorderThickness="1"
                                    Background="#0FFFFFFF"
                                    VerticalAlignment="Center"/>

                            <Path x:Name="Check"
                                  Grid.Column="0"
                                  Width="10" Height="8"
                                  Stretch="Fill"
                                  Fill="{StaticResource TextPrimary}"
                                  Data="M 0 4 L 3 7 L 10 0"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Center"
                                  Opacity="0"/>

                            <ContentPresenter Grid.Column="1"
                                              VerticalAlignment="Center"
                                              Margin="8,0,0,0"/>

                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Box" Property="BorderBrush" Value="#55FFFFFF"/>
                                <Setter TargetName="Box" Property="Background" Value="#14FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Box" Property="Background" Value="#246C5CE7"/>
                                <Setter TargetName="Box" Property="BorderBrush" Value="#556C5CE7"/>
                                <Setter TargetName="Check" Property="Opacity" Value="1"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Box" Property="Opacity" Value="0.55"/>
                                <Setter Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="Transparent">
        <Border x:Name="Panel"
                Margin="0"
                Background="{StaticResource PanelBg}"
                BorderBrush="{StaticResource PanelStroke}"
                BorderThickness="1"
                CornerRadius="16"
                SnapsToDevicePixels="True">

            <Border.Effect>
                <DropShadowEffect BlurRadius="22" ShadowDepth="0" Opacity="0.45" Color="#000000"/>
            </Border.Effect>

            <Grid Margin="0,0,0,-1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="44"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="58"/>
                </Grid.RowDefinitions>

                <!-- HEADER -->
                <Grid x:Name="Header"
                      Grid.Row="0"
                      Background="{StaticResource HeaderBg}"
                      MouseLeftButtonDown="Header_MouseLeftButtonDown">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="CloseButton"
                            Grid.Column="0"
                            Width="30" Height="28"
                            Margin="12,8,8,8"
                            Style="{StaticResource VisorButton}"
                            Content="✕"/>

                    <TextBlock Grid.Column="1"
                               VerticalAlignment="Center"
                               Foreground="{StaticResource TextPrimary}"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Text="Settings"/>

                    <TextBlock Grid.Column="2"
                               VerticalAlignment="Center"
                               Margin="0,0,14,0"
                               Foreground="{StaticResource TextMuted}"
                               FontSize="11"
                               Text="VisorView"/>
                </Grid>

                <!-- CONTENT -->
                <ScrollViewer Grid.Row="1"
                              Margin="18,16,18,0"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <StackPanel>

                        <!-- Preferences -->
                        <Border Style="{StaticResource SectionCard}">
                            <StackPanel>
                                <TextBlock Text="Preferences"
                                           Foreground="{StaticResource TextPrimary}"
                                           FontSize="13"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,10"/>

                                <TextBlock Text="Default search engine"
                                           Foreground="{StaticResource TextMuted}"
                                           Margin="0,0,0,8"/>

                                <ComboBox x:Name="EngineCombo"
                                          Height="32"
                                          Style="{StaticResource VisorComboBox}"
                                          ItemContainerStyle="{StaticResource VisorComboBoxItem}">
                                    <ComboBoxItem Content="Google"/>
                                    <ComboBoxItem Content="DuckDuckGo"/>
                                    <ComboBoxItem Content="Bing"/>
                                    <ComboBoxItem Content="Brave"/>
                                </ComboBox>
                            </StackPanel>
                        </Border>

                        <!-- Behavior -->
                        <Border Style="{StaticResource SectionCard}">
                            <StackPanel>
                                <TextBlock Text="Behavior"
                                           Foreground="{StaticResource TextPrimary}"
                                           FontSize="13"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,10"/>

                                <CheckBox x:Name="AlwaysOnTopCheck"
                                          Style="{StaticResource VisorCheckBox}"
                                          Content="Always on top"/>

                                <CheckBox x:Name="ClickThroughCheck"
                                          Style="{StaticResource VisorCheckBox}"
                                          Content="Click-through in Normal Mode"/>

                                <CheckBox x:Name="StartEditModeCheck"
                                          Style="{StaticResource VisorCheckBox}"
                                          Content="Start in Edit Mode"/>

                                <CheckBox x:Name="BlockAdsCheck"
                                          Style="{StaticResource VisorCheckBox}"
                                          Content="Block ads in browser tabs"/>

                                <TextBlock Text="Tip: Enable click-through so VisorView behaves like a true overlay while you work."
                                           Foreground="{StaticResource TextMuted}"
                                           Opacity="0.85"
                                           TextWrapping="Wrap"
                                           Margin="0,6,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Shortcuts -->
                        <Border Style="{StaticResource SectionCard}">
                            <StackPanel>
                                <TextBlock Text="Shortcuts"
                                           Foreground="{StaticResource TextPrimary}"
                                           FontSize="13"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,10"/>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="0"
                                               Text="Hide window"
                                               Foreground="{StaticResource TextMuted}"/>
                                    <TextBlock Grid.Row="0"
                                               Grid.Column="1"
                                               Text="Ctrl+Shift+O"
                                               Foreground="{StaticResource TextPrimary}"
                                               FontWeight="SemiBold"/>

                                    <TextBlock Grid.Row="1"
                                               Text="Toggle window type"
                                               Foreground="{StaticResource TextMuted}"
                                               Margin="0,8,0,0"/>
                                    <TextBlock Grid.Row="1"
                                               Grid.Column="1"
                                               Text="Ctrl+Shift+E"
                                               Foreground="{StaticResource TextPrimary}"
                                               FontWeight="SemiBold"
                                               Margin="0,8,0,0"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- About / Credit -->
                        <Border Style="{StaticResource SectionCard}">
                            <StackPanel>
                                <TextBlock Text="About"
                                           Foreground="{StaticResource TextPrimary}"
                                           FontSize="13"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,10"/>

                                <TextBlock Text="VisorView is a lightweight overlay browser for keeping reference content visible while you work or game."
                                           Foreground="{StaticResource TextMuted}"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,10"/>

                                <TextBlock Foreground="{StaticResource TextMuted}" TextWrapping="Wrap">
                                    <Run Text="Created by "/>
                                    <Run Text="Tanay Reddy" Foreground="{StaticResource TextPrimary}" FontWeight="SemiBold"/>
                                    <Run Text="."/>
                                </TextBlock>

                                <TextBlock Margin="0,6,0,0">
                                    <Hyperlink NavigateUri="https://tanayreddy.org"
                                               RequestNavigate="Hyperlink_RequestNavigate">
                                        <TextBlock Text="tanayreddy.org" Style="{StaticResource LinkText}"/>
                                    </Hyperlink>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>

                <!-- FOOTER -->
                <Grid Grid.Row="2" Background="{StaticResource FooterBg}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <CheckBox x:Name="RememberLayoutCheck"
                              Grid.Column="0"
                              Margin="18,0,0,0"
                              VerticalAlignment="Center"
                              Style="{StaticResource VisorCheckBox}"
                              Content="Remember layout and tabs"/>

                    <Button x:Name="CancelButton"
                            Grid.Column="1"
                            Width="96" Height="34"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            Style="{StaticResource VisorButton}"
                            Content="Cancel"/>

                    <Button x:Name="SaveButton"
                            Grid.Column="2"
                            Width="96" Height="34"
                            Margin="0,0,18,0"
                            VerticalAlignment="Center"
                            Style="{StaticResource VisorButtonPrimary}"
                            Content="Save"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
